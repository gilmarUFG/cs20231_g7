        "version": "1.1.0"
    },
    "servers": [
        {
            "url": "https://api.unirent.cloud/",
            "description": "Servidor de desenvolvimento"
        }
    ],
    "tags": [
        {
            "name": "Anuncios",
            "description": "API para gerenciamento de anúncios"
        },
        {
            "name": "Usuarios",
            "description": "API para gerenciamento de usuários"
        }
    ],
    "paths": {
        "/usuario/obter/{id}": {
            "get": {
                "summary": "Obtém informações de um usuário pelo ID.",
                "tags": [
                    "Usuarios"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "format": "int64",
                        "description": "ID do usuário."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario/listar": {
            "get": {
                "summary": "Lista todos os usuários cadastrados.",
                "tags": [
                    "Usuarios"
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario/cadastrar": {
            "post": {
                "summary": "Realiza o cadastro de um novo usuário.",
                "tags": [
                    "Usuarios"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/UsuarioCadastro"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario/login": {
            "post": {
                "summary": "Realiza o login do usuário.",
                "tags": [
                    "Usuarios"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/CredenciaisLogin"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario/seInteressar": {
            "post": {
                "summary": "Indica interesse em um anúncio.",
