    "definitions": {
        "UsuarioCadastro": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string",
                    "example": "João da Silva",
                    "description": "Nome completo do usuário."
                },
                "email": {
                    "type": "string",
                    "example": "joao@example.com",
                    "description": "Endereço de email do usuário."
                },
                "senha": {
                    "type": "string",
                    "example": "senha123",
                    "description": "Senha de acesso do usuário."
                },
                "telefone": {
                    "type": "string",
                    "example": "(11) 98765-4321",
                    "description": "Número de telefone do usuário."
                }
            }
        },
        "CredenciaisLogin": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "joao@example.com",
                    "description": "Endereço de email do usuário."
                },
                "senha": {
                    "type": "string",
                    "example": "senha123",
                    "description": "Senha de acesso do usuário."
                }
            }
        },
        "InteresseAnuncio": {
            "type": "object",
            "properties": {
                "usuario_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 123,
                    "description": "ID do usuário interessado."
                },
                "anuncio_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 456,
                    "description": "ID do anúncio que despertou interesse."
                }
            }
        },
        "DetalheAnuncioDeslogado": {
            "type": "object",
            "properties": {
                "anuncio_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 456,
                    "description": "ID do anúncio a ser detalhado."
                }
            }
        },
        "FiltroAnuncio": {
            "type": "object",
            "properties": {
                "titulo": {
                    "type": "string",
                    "example": "Apartamento"
                },
                "preco_min": {
                    "type": "number",
                    "format": "float",
                    "example": 1000.0
                },
                "preco_max": {
                    "type": "number",
                    "format": "float",
                    "example": 2000.0
                }
            }
        },
        "DetalheAnuncioLogado": {
            "type": "object",
            "properties": {
                "anuncio_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 456,
                    "description": "ID do anúncio a ser detalhado."
                },
                "usuario_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 123,
                    "description": "ID do usuário que está realizando a solicitação."
                }
            }
        },
        "AnuncioCadastro": {
            "type": "object",
            "properties": {
                "titulo": {
                    "type": "string",
                    "example": "Apartamento espaçoso"
                },
                "descricao": {
                    "type": "string",
                    "example": "Lindo apartamento de 3 quartos."
                },
                "preco": {
                    "type": "number",
                    "format": "float",
                    "example": 1500.0
                }
            }
        },
        "AnuncioDelecao": {
            "type": "object",
            "properties": {
                "anuncio_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 456,
                    "description": "ID do anúncio a ser deletado."
                },
                "usuario_id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 123,
                    "description": "ID do usuário proprietário do anúncio."
